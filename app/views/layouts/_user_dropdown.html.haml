%li.dropdown
  %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}, role: 'button', aria: {expanded: 'true'}}
    = image_tag(current_user.avatar.tiny.url, style: 'display: inline-block; border-radius: 10px;') if current_user.avatar?
    = current_user.name || 'My Account'
    %span.caret
  %ul.dropdown-menu{role: 'menu'}
    %li
      = link_to 'Messages', :conversations
    %li
      = link_to "Show Profile", user_profile_path(current_user)
    %li
      = link_to "Edit Profile", edit_user_registration_path
    %li
      = link_to 'Sign out', destroy_user_session_path, :method=>'delete'