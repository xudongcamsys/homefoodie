%h3
  = 'Profile'
%p.pull-left
  = image_tag(@user.avatar.profile.url) if @user.avatar?
%p
  = "Name: #{@user.name || '(Not provided)'}"
%p
  = "Email: #{@user.email}"
%p
  = link_to "Following: #{@user.followees(User).count}", user_followees_path(@user)
  |
  = link_to "Followers: #{@user.followers(User).count}", user_followers_path(@user)
- if @user.id != current_user.id
  - if !current_user.follows?(@user)
    = link_to 'Follow', follows_path(user_id: @user.id), method: :post
  - else
    = link_to 'Unfollow', follows_path(user_id: @user.id), method: :delete