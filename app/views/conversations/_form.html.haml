= simple_form_for :conversation, url: :conversations do |f|
  = f.input :recipients, as: :hidden
  = f.input :subject
  = f.input :body, as: :text
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = f.button :submit, 'Reset', type: :reset, class: 'btn-danger'

  - if !params[:recipients].blank?
    :javascript
      $('#conversation_recipients').val("#{params[:recipients]}");